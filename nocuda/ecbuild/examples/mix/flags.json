{
    "*"       : [ "+", "-g0"  ],

    "*.cxx"   : [ "+", "-cxx11" ],
    "*.f90"   : [ "+", "-pipe" ],

    "foo.c"   : [ "+", "-O0" ],
    "foo.cc"  : [ "+", "-O2", "-pipe"  ],

    "bar/*": {
      "*.f90" : [ "=", "-O1" ]
    },

    "baz/*": {
      "*.f90" : [ "/", "-pipe" ],
      "*.f90" : [ "/", "-O2"  ],
      "*.f90" : [ "+", "-O3"  ]
    }
}
